@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnzipWe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UnzipWe.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container"> 
        <div class="row py-sm-3">
            <div class="col-md-8 col-lg-9 p-0" style="max-height: 400px;overflow-y: hidden;">
                <img class="d-block w-100 h-100" src="~/images/hypermart.jpg" style="object-fit: cover; object-position: center center;">
            </div>
            <div class="col-md-4 col-lg-3 p-0" style="max-height: 400px;overflow-y: hidden;">
                <div class="card stockbox text-black" style="background-color: rgba(186, 186, 186, 0.7); height: 400px;" data-mh="home-banner">
                    <div class="title">
                        <h1 style="margin-bottom: 10px">Drop file to upload</h1>
                    </div>
                    <div class="center">
                        <form method="post" enctype="multipart/form-data">
                            <div class="dropzone">
                                <img src="http://100dayscss.com/codepen/upload.svg" class="upload-icon" />
                                <input type="file" id="file" name="file" accept=".zip" class="upload-input" />
                            </div>

                            <button type="submit" class="btn">Upload file</button>
                        </form>
                    </div>

                    <div class="card-footer" style="margin-top:295px">
                        <p class="font-weight-light m-0 small" style="margin-top: 15px">Zip File Only</p>
                        <p class="font-weightalert-light m-0 small" style="font-size:10px">SQL Server Proint</p>
                        <div class="col">
                        </div>
                        <div class="col-auto m-auto">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 d-flex flex-wrap justify-content-around" style="margin-top: 50px;">
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="~/images/Hypermart1.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="/images/foodmart.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="/images/Hyfresh.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="/images/Primo.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="/images/Boston.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="/images/Fmx.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a>
                <!-- <a class="mb-2" href="http://www.hypermart.co.id" target="_blank"><img src="images/logo/Smartclub.png" class="img-fluid" style="margin-left: 5px; margin-right: 5px;"></a> -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>

<style>
    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        flex-direction: column;
    }

    .title {
        width: 100%;
        height: 40px;
        margin-top: 20px;
        border-bottom: 1px solid #999;
        text-align: center;
    }

    p {
        letter-spacing: 3px;
        text-align: center;
    }

    h1 {
        font-size: 16px;
        font-weight: 300;
        color: #666;
    }

    .dropzone {
        width: 150px;
        height: 100px;
        border: 1px dashed #999;
        border-radius: 3px;
        align-items: center;
        text-align: center;
        margin-bottom: 50px;
    }

    .upload-icon {
        margin: 40px 2px 2px 2px;
    }

    .upload-input {
        position: relative;
        top: -62px;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
    }

    .btn {
        display: block;
        width: 140px;
        height: 40px;
        background: #e0134c;
        color: #fff;
        border-radius: 3px;
        border: 0;
        transition: all 0.3s ease-in-out;
        font-size: 14px;
    }

        .btn:hover {
            background: #ba0235;
        }

</style>